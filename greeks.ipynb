    "import numpy as np\n",
    "from scipy.stats import norm\n",
    "import yfinance as yf\n",
    "import matplotlib.pyplot as plt\n",
    "from datetime import datetime"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "63eed044",
   "metadata": {},
   "outputs": [],
   "source": [
    "class Option:\n",
    "\n",
    "    def __init__(self, sigma: float, K: float, S:float, T:float, r:float, option_type:str):\n",
    "\n",
    "        if option_type not in ['call', 'put']:\n",
    "            raise ValueError(\"option_type must be either 'call' or 'put'\")\n",
    "\n",
    "        self.sigma = sigma\n",
    "        self.K = K\n",
    "        self.S = S\n",
    "        self.T = T\n",
    "        self.r = r\n",
    "        self.option_type = option_type\n",
    "\n",
    "        self._calculate_d1_d2()\n",
    "\n",
    "    def _calculate_d1_d2(self):\n",
    "        \"\"\" \n",
    "        Calculates the d1 and d2 parameter from the Black-Scholes Formula\n",
    "        \"\"\"\n",
    "\n",
    "        self.d1 = (np.log(self.S / self.K) + self.T * (self.r + self.sigma ** 2 / 2)) / (self.sigma * np.sqrt(self.T))\n",
    "        self.d2 = self.d1 - self.sigma * np.sqrt(self.T)\n",
    "\n",
    "    def price(self):\n",
    "        \"\"\"\"\n",
    "        Applies the Black-Scholes Model to calculate the price of a option.\n",
    "        \"\"\"\n",
    "\n",
    "        # Calculates the value of the option based on its option_type, either \"call\" or \"put\"\n",
    "        if self.option_type == \"call\":\n",
    "\n",
    "            V = self.S * norm.cdf(self.d1) - np.exp(-self.r * self.T) * self.K * norm.cdf(self.d2)\n",
    "\n",
    "        elif self.option_type == \"put\":\n",
    "\n",
    "            V = np.exp(-self.r * self.T) * self.K * norm.cdf(-self.d2) - self.S * norm.cdf(-self.d1)\n",
    "\n",
    "        return V\n",
    "\n",
    "    def delta(self):\n",
    "        \"\"\"\n",
    "        Calculates the Delta measure based on the derivative of the BSF\n",
    "        \"\"\"\n",
    "\n",
    "        if self.option_type == \"call\":\n",
    "\n",
    "            d = norm.cdf(self.d1)\n",
    "\n",
    "        elif self.option_type == \"put\":\n",
    "\n",
    "            d = norm.cdf(self.d1) - 1\n",
    "\n",
    "        return d\n",
    "\n",
    "    def gamma(self):\n",
    "        \"\"\"\n",
    "        Calculates the Gamma measure based on the derivative of the BSF\n",
    "        \"\"\"\n",
    "\n",
    "        g = norm.pdf(self.d1) / (self.S * self.sigma * np.sqrt(self.T))\n",
    "\n",
    "        return g\n",
    "\n",
    "    def theta(self):\n",
    "        \"\"\"\n",
    "        Calculates the daily Theta measure based on the derivative of the BSF\n",
    "        \"\"\"\n",
    "\n",
    "        if self.option_type == \"call\":\n",
    "\n",
    "            t = - self.r * self.K * np.exp(-self.r * self.T) * norm.cdf(self.d2) - (self.S * self.sigma * norm.pdf(self.d1)) / (2 * np.sqrt(self.T))\n",
    "\n",
    "        elif self.option_type == \"put\":\n",
    "\n",
    "            t = self.r * self.K * np.exp(-self.r * self.T) * norm.cdf(self.d2) - (self.S * self.sigma * norm.pdf(self.d1)) / (2 * np.sqrt(self.T))\n",
    "\n",
    "        return t/365\n",
    "\n",
    "    def vega(self):\n",
    "        \"\"\"\n",
    "        Calculates the daily Vega measure based on the derivative of the BSF\n",
    "        \"\"\"\n",
    "\n",
    "        v = self.S * np.sqrt(self.T) * norm.pdf(self.d1)\n",
    "\n",
    "        return v/100\n",
    "\n",
    "    def rho(self):\n",
    "        \"\"\"\n",
    "        Calculates the Rho measure in percentage points based on the derivative of the BSF\n",
    "        \"\"\"\n",
    "\n",
    "        if self.option_type == \"call\":\n",
    "\n",
    "            p = self.K * self.T * np.exp(-self.r * self.T) * norm.cdf(self.d2)\n",
    "\n",
    "        elif self.option_type == \"put\":\n",
    "\n",
    "            p = -self.K * self.T * np.exp(-self.r * self.T) * norm.cdf(-self.d2)\n",
    "\n",
    "        return p/100\n",
    "    \n",
    "    def summary(self):\n",
    "\n",
    "        price = self.price()\n",
    "        D = self.delta()\n",
    "        G = self.gamma()\n",
    "        T = self.theta()\n",
    "        V = self.vega()\n",
    "        R = self.rho()\n",
    "\n",
    "        print(\"-- Call Option Greeks Summary --\")\n",
    "        print(f\"Price: ${price: .2f}\")\n",
    "        print(f\"Delta: {D: .2f}\")\n",
    "        print(f\"Gamma: {G: .2f}\")\n",
    "        print(f\"Theta: {T: .2f}\")\n",
    "        print(f\"Vega: {V: .2f}\")\n",
    "        print(f\"Rho: {R: .2f}\")"
   ]
